<?xml version="1.0" encoding="UTF-8"?>

<undertale>
    <!-- pacifist | neutral | genocide | indestinct -->
    <scene route="neutral">
        <exprNote>
            <mouth ref="#sm"/>
            <!-- add expressions together -->
            <!-- quick ref for labeling faces -->
            <!-- library of expression images with idRef for the expressions -->
        </exprNote>
        <dialogue>
            <!-- more attributes for person if need be -->
            <!-- speaker or person (person may need speaking indicator) -->
            <character name="King">
                <!-- "fr" instead of "frame"? -->
                <frame expr="mouth-slightly-open" looking="down-right">
                    <p end="ellipsis">How tense...</p>
                </frame>
                <frame expr="smile" looking="left">
                    <p end="ellipsis">Just think of it like...</p>
                </frame>
                <frame expr="smile" eyes="straight">
                    <p end="period">A visit to the dentist.</p>
                </frame>
                <frame>
                    <p end="question">Are you ready?</p>
                </frame>
                <frame>
                    <p end="period">If you are not, I understand.</p>
                </frame>
                <frame>
                    <p>I am not ready either.</p>
                </frame>
            </character>
            <textBox>
                <text>File saved.</text>
            </textBox>
        </dialogue>
        
    </scene>
</undertale>
